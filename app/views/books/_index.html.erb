<table class="table table-hover">
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to "詳細", edit_book_path(book.id), class: "btn btn-primary"%>
          <%= link_to "削除する", book_path(book.id), method: :delete, remote: true, class: "btn btn-danger"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>